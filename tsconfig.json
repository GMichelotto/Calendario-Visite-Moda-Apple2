{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"],
      "@shared/*": ["shared/*"],
      "@electron-types/*": ["electron/types/*"],
      "@src-types/*": ["src/services/types/*"]
    },
    "types": ["node", "electron"],
    "typeRoots": [
      "./node_modules/@types",
      "./electron/types",
      "./shared/types",
      "./src/services/types"
    ],
    "rootDir": "."
  },
  "include": [
    "src/**/*",
    "electron/**/*",
    "shared/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "electron/node_modules"
  ]
}
