{
  "name": "fashion-calendar",
  "version": "1.0.0",
  "description": "Fashion Agency Calendar Management System",
  "main": "build/electron/main.js",
  "private": true,
  "author": {
    "name": "Fashion Calendar App",
    "email": "gianluigi.michelotto@gmail.com"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "npm run build:electron && react-scripts build",
    "build:electron": "tsc -p electron/tsconfig.json",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron:dev": "concurrently \"cross-env BROWSER=none npm start\" \"wait-on http://127.0.0.1:3000 && npm run build:electron && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "electron:build:win": "npm run build && electron-builder --win -c.extraMetadata.main=build/electron/main.js",
    "electron:build:mac": "npm run build && electron-builder --mac -c.extraMetadata.main=build/electron/main.js",
    "predist": "npm run build",
    "dist": "electron-builder",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-slot": "^1.0.2",
    "better-sqlite3": "9.3.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "date-fns": "^2.30.0",
    "electron-is-dev": "2.0.0",
    "electron-log": "5.0.3",
    "electron-store": "8.1.0",
    "electron-updater": "6.1.7",
    "jspdf": "2.5.1",
    "jspdf-autotable": "3.8.1",
    "lucide-react": "0.263.1",
    "moment": "2.30.1",
    "papaparse": "^5.4.1",
    "react": "18.2.0",
    "react-big-calendar": "1.8.6",
    "react-color": "2.19.3",
    "react-dom": "18.2.0",
    "react-scripts": "5.0.1",
    "recharts": "^2.10.4",
    "tailwind-merge": "^2.2.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "7.21.11",
    "@types/better-sqlite3": "7.6.9",
    "@types/electron": "1.6.10",
    "@types/node": "20.11.16",
    "@types/papaparse": "^5.3.14",
    "@types/react": "18.2.51",
    "@types/react-big-calendar": "1.8.8",
    "@types/react-color": "^3.0.11",
    "@types/react-dom": "18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "autoprefixer": "10.4.17",
    "concurrently": "8.2.2",
    "cross-env": "7.0.3",
    "electron": "28.1.4",
    "electron-builder": "24.9.1",
    "eslint": "^8.56.0",
    "postcss": "8.4.33",
    "postcss-cli": "11.0.0",
    "tailwindcss": "3.4.1",
    "typescript": "4.9.5",
    "wait-on": "7.2.0"
  },
  "resolutions": {
    "@types/node": "20.11.16"
  },
  "build": {
    "appId": "com.fashioncalendar.app",
    "productName": "Fashion Calendar",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "build/**/*",
      "electron/**/*"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets"
      }
    ],
    "extraMetadata": {
      "main": "build/electron/main.js"
    },
    "protocols": {
      "name": "fashion-calendar-protocol",
      "schemes": ["fashion-calendar"]
    },
    "mac": {
      "category": "public.app-category.business",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "assets/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico",
      "publisherName": "Fashion Calendar App"
    },
    "dmg": {
      "sign": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "homepage": "./",
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
