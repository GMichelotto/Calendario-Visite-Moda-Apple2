{
  "name": "fashion-calendar",
  "version": "1.0.0",
  "description": "Fashion Agency Calendar Management System",
  "main": "electron/main.js",
  "private": true,
  "author": {
    "name": "Fashion Calendar Team",
    "email": "support@fashioncalendar.com"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron:dev": "concurrently \"cross-env BROWSER=none npm start\" \"wait-on http://127.0.0.1:3000 && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "electron:build:win": "npm run build && electron-builder --win -c.extraMetadata.main=build/electron/main.js",
    "electron:build:mac": "npm run build && electron-builder --mac -c.extraMetadata.main=build/electron/main.js",
    "predist": "npm run build",
    "dist": "electron-builder",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@emotion/react": "11.11.3",
    "@emotion/styled": "11.11.0",
    "@mui/icons-material": "5.15.6",
    "@mui/material": "5.15.6",
    "better-sqlite3": "9.3.0",
    "electron-is-dev": "2.0.0",
    "electron-log": "5.0.3",
    "electron-store": "8.1.0",
    "electron-updater": "6.1.7",
    "moment": "2.30.1",
    "react": "18.2.0",
    "react-big-calendar": "1.8.6",
    "react-dom": "18.2.0",
    "react-scripts": "5.0.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "6.2.0",
    "@testing-library/react": "14.1.2",
    "@testing-library/user-event": "14.5.2",
    "autoprefixer": "10.4.17",
    "concurrently": "8.2.2",
    "cross-env": "7.0.3",
    "electron": "28.1.4",
    "electron-builder": "24.9.1",
    "postcss": "8.4.33",
    "postcss-cli": "11.0.0",
    "tailwindcss": "3.4.1",
    "wait-on": "7.2.0"
  },
  "build": {
    "appId": "com.fashioncalendar.app",
    "productName": "Fashion Calendar",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "build/**/*",
      "electron/**/*"
    ],
    "extraMetadata": {
      "main": "electron/main.js"
    },
    "extraResources": [
      {
        "from": "assets",
        "to": "assets"
      }
    ],
    "mac": {
      "category": "public.app-category.business",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "assets/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "dmg": {
      "sign": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "homepage": "./",
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
