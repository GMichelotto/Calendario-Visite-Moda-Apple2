{
  "name": "calendario-visite-moda",
  "version": "1.0.2",
  "description": "Applicazione per la gestione del calendario visite moda",
  "main": "public/electron.js",
  "homepage": "./",
  "author": "Gianluigi Michelotto <gianluigi.michelotto@gmail.com>",
  "license": "ISC",
  "private": true,
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-big-calendar": "^1.8.4",
    "moment": "^2.29.4",
    "electron-is-dev": "^2.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "concurrently": "^8.2.1",
    "cross-env": "^7.0.3",
    "electron": "^26.1.0",
    "electron-builder": "^24.6.3",
    "react-scripts": "5.0.1",
    "typescript": "^4.9.5",
    "wait-on": "^7.0.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron-dev": "concurrently \"cross-env BROWSER=none npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "npm run build && npm run set-version && electron-builder -c.extraMetadata.main=build/electron.js --publish never",
    "electron:start": "wait-on tcp:3000 && electron .",
    "set-version": "node -e \"const fs=require('fs'); const package=JSON.parse(fs.readFileSync('package.json')); fs.writeFileSync('build/version.txt', package.version);\""
  },
  "build": {
    "appId": "com.gianluigimichelotto.calendariovisitemoda",
    "productName": "Calendario Visite Moda",
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "public/electron.js"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "extraMetadata": {
      "version": "1.0.2"
    },
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
