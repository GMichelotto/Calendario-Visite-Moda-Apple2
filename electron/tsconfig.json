{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "noEmit": false,
    "outDir": "../build/electron",
    "baseUrl": ".",
    "paths": {
      "*": ["*"],
      "@electron-types/*": ["types/*"],
      "@shared/*": ["../shared/types/*"],
      "@src-types/*": ["../src/services/types/*"]
    },
    "typeRoots": [
      "../node_modules/@types",
      "./types",
      "../shared/types",
      "../src/services/types"
    ]
  },
  "include": [
    "src/**/*",
    "types/**/*"
  ],
  "exclude": [
    "node_modules",
    "../build",
    "../dist"
  ]
}
