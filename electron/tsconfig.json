{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "../build/electron",
    "rootDir": "..",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "..",
    "paths": {
      "@/*": ["src/*"],
      "@shared/*": ["shared/*"]
    }
  },
  "include": [
    ".",
    "../shared/**/*",
    "../src/types/**/*"
  ],
  "exclude": [
    "node_modules",
    "../build",
    "../dist"
  ]
}
