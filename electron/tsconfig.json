{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "../build",
    "rootDir": "..",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "../shared/**/*",
    "./**/*"
  ],
  "exclude": [
    "node_modules",
    "../build",
    "../dist",
    "../src/**/*"
  ]
}
