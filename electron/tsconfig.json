{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../build/electron",
    "rootDir": "../",
    "baseUrl": "../",
    "noEmit": false,
    "paths": {
      "@shared/*": ["shared/*"],
      "@electron/*": ["electron/*"]
    }
  },
  "include": [
    "./**/*",
    "../shared/**/*"
  ],
  "exclude": [
    "**/node_modules/**",
    "**/dist/**",
    "**/build/**"
  ]
}
